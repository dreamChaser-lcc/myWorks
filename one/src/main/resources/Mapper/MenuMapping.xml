<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.MenuDao">
        <!--    关系映射到Map上,进行封装-->
    <resultMap id="menuMap" type="com.example.demo.bean.MainMenu">
        <!--  column对应数据库属性名，property对应实体的对象中的属性名      -->
        <id column="id" property="id"></id>
        <result column="title" property="title"></result>
        <result column="path" property="path"></result>
        <!-- 封装SubMenu对象 -->
        <collection property="sList" ofType="com.example.demo.bean.SubMenu">
            <id column="sid" property="id"></id>
            <result column="stitle" property="title"></result>
            <result column="spath" property="path"></result>

        </collection>
    </resultMap>
    <select id="getMenus" resultMap="menuMap">
        SELECT mm.*,sm.id as sid , sm.title as stitle ,sm.path as spath
        From mainmenu mm,submenu sm
        WHERE mm.id=sm.mid;
    </select>
</mapper>